<div class="task-list card container mt-4">
  <h2><%= @task_list.name %></h2>
  <div class="tasks" id="tasks">
    <% @task_list.tasks.each_with_index do |task, index| %>
      <%= render "tasks/task", task: , class_personalized: 'task-list__task'%>
    <% end %>
    <%= link_to 'New Task',new_task_path(task_list_id: @task_list), data: {turbo_frame: "new_task"} %>
  </div>
  <div>
    <%= link_to "Edit this task list", edit_task_list_path(@task_list) %> |
    <%= link_to "Back to task lists", task_lists_path %>

    <%= button_to "Destroy this task list", @task_list, method: :delete, data: {turbo_confirm: 'Quer mesmo fazer isso?'} %>
  </div>
</div>
<%= turbo_frame_tag "new_task"%>
