<body>
  <%= render "layouts/header"%>
  <main class = "container mt-5">
    <% if flash[:notice] %>
      <div class="<%= flash_class(:success)%>"><%= flash[:notice] %></div>
    <% end %>
    <% @task_lists.each do |task_list| %>
      <div id="task_lists">
        <div class="list-group">
          <div class="list-group-item list-group-item-action d-flex flex-row  justify-content-between gap-3 py-3">
            <div>
              <%= render "utils/hash" %>
              <%= link_to task_list.name , task_list_path(task_list), class: '' %>
            </div>
            <p class="d-flex "><%= task_list.tasks.count %></p>
          </div>
        </div>
      </div>
    <% end %>
    <%= turbo_frame_tag "new_task_list"%>
    <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
        <%= link_to "Nova lista", new_task_list_path, class: 'btn btn-primary button__new_task_list', data: {turbo_frame: "new_task_list"} %>
    </div>
  </main>
</body>
