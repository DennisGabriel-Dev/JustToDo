<body>
  <%= render "layouts/header"%>
  <main id="task_lists" class= "container mt-5">
    <% if flash[:notice] %>
      <div class="<%= flash_class(:success)%>"><%= flash[:notice] %></div>
    <% end %>
    <% @task_lists.each do |task_list| %>
      <div id="task_list">
        <div class="">
          <div class="">
            <div>
              <%#= render "utils/hash" %>
              <%= render 'task_list', task_list:  %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="container">
      <div class="row">
        <div class="d-flex justify-content-center">
          <%= turbo_frame_tag "new_task_list"%>
        </div>
      </div>
    </div>
    <div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
        <%= link_to "Nova lista", new_task_list_path, class: 'btn btn-primary button__new_task_list', data: {turbo_frame: "new_task_list"} %>
    </div>
  </main>
</body>
